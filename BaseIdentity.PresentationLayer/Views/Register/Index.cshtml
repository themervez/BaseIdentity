@model AppUserRegisterViewModel
@{
    Layout = null;
}
<br />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <form method="post">
        <h2>Yeni Üye Kaydı</h2>
        <br />
        <label>Adınız:</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-info"></span>
        <br />
        <label>Soyadınız:</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-info"></span>
        <br />
        <label>Kullanıcı Adınız:</label>
        <input type="text" class="form-control" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-info"></span>
        <br />
        <label>E-mailiniz:</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-info"></span>
        <br />
        <label>Şifreniz:</label>
        <input type="text" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-info"></span>
        <br />
        <label>Şifre Tekrar:</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-info"></span>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-success"></div>
        <button class="btn btn-outline-primary">Üyeyi Kaydet</button>
    </form>
</div>